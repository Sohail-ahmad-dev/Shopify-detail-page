          "label": "Twitter URL"
        },
        {
          "type": "image_picker",
          "id": "facebook_image",
          "label": "Facebook Icon Image"
        },
        {
          "type": "url",
          "id": "facebook_url",
          "label": "Facebook URL"
        },
        {
          "type": "image_picker",
          "id": "instagram_image",
          "label": "Instagram Icon Image"
        },
        {
          "type": "url",
          "id": "instagram_url",
