        },
        {
          "type": "image_picker",
          "id": "pinterest_image",
          "label": "Pinterest Icon Image"
        },
        {
          "type": "url",
          "id": "pinterest_url",
          "label": "Pinterest URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Default Footer",
      "category": "Footer"
    }
  ]
}


