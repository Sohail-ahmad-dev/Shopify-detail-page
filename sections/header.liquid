

<!-- header start -->
<header class="header">
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid px-30">
            <a class="navbar-brand" href="#">
                <img src="{{ 'logo.png' |  asset_img_url : "1500x70" }}" height="100%" width="100%" alt="logo" class="img-fluid">
            </a>
            <a href="#" class="btn-cutom buy-btn mobile--show me-0">Buy Now</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarText">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    {% assign menu_handle = section.settings.menu %}
                    {% if linklists[menu_handle].links.size > 0 %}
                        {% for link in linklists[menu_handle].links %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ link.url }}" aria-current="page">{{ link.title }}</a>
                        </li>
                        {% endfor %}
                    {% else %}
                        <!-- You can add a fallback here if the menu is empty or undefined -->
                        <li class="nav-item">
                        <a class="nav-link" href="#">No Menu Available</a>
                        </li>
                    {% endif %}
                </ul>

                <div class="navbar-right">
                    <a type="button" class="btn-cutom buy-btn">Buy Now</a>
                    <a type="button" class="btn-cutom profile-btn">
                        <img src="{{ 'profile.png' |  asset_img_url : "25x25" }}" height="25" width="25" alt="profile">
                    </a>
                </div>
            </div>
        </div>
    </nav>

</header>
<!-- header end -->
    
